 
@model Vidly.ViewModels.NewCustomerviewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="jumbotron">Add Customer</h2>
@using (Html.BeginForm("Create","Customer")) {
    <div class="form-group">
         @Html.LabelFor(m=>m.customer.Name)
        @Html.TextBoxFor(m=>m.customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.customer.BirthdayDate)
        @Html.TextBoxFor(m=>m.customer.BirthdayDate,new {@class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m=>m.customer.IsSubscribedToNewsletter)subscribed to newletter
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.customer.MembershipTypeId)
        @Html.DropDownListFor(m=>m.customer.MembershipTypeId,new SelectList(Model.MembershipType,"Id","Name"),"Select Member ship types",new { @class="form-control"})
    </div>
    <div class = "form-group">
        <input type="submit" class="btn btn-primary" >    
    </div>
}

